<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tweet_dark_background"
    tools:context=".fragment.TweetFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:animateLayoutChanges="false"
        android:animationCache="false"
        android:background="@drawable/blue_round_corners_background"
        android:gravity="top">

        <RelativeLayout
            android:id="@+id/fragmentProfileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/fragmentProfilePic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/alien_icon"
                app:srcCompat="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/fragmentUserName"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/fragmentProfilePic"
                android:background="@drawable/white_round_corners_background"
                android:gravity="center"
                android:text="User name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fragmentAlias"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@id/fragmentUserName"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/fragmentProfilePic"
                android:background="@drawable/white_round_corners_background"
                android:gravity="center"
                android:text="Alias"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragmentTweetContentLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/fragmentProfileLayout">

            <TextView
                android:id="@+id/fragmentTweetContent"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/white_round_corners_background"
                android:text="Tweet Content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/framentButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/fragmentTweetContentLayout"
            android:layout_alignParentBottom="false">

            <Button
                android:id="@+id/fragmentReplyButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_toLeftOf="@id/fragmentRetweetButton"
                android:background="@drawable/white_round_corners_background"
                android:text="Reply" />

            <Button
                android:id="@+id/fragmentRetweetButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="30dp"
                android:layout_toLeftOf="@id/fragmentLikeButton"
                android:background="@drawable/white_round_corners_background"
                android:text="Retweet" />

            <Button
                android:id="@+id/fragmentLikeButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/white_round_corners_background"
                android:text="Like" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>